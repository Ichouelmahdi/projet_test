               <script type="text/javascript" src="/test_p/static/src/js/lead_icon.js"/>
           </xpath>
       </template>
   </data>

    <!--  type of context : Opportunity / Lead    -->

    <record model="ir.ui.view" id="mail_activity_view_form_popup_herit">
