<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="view_plan_action_form" model="ir.ui.view">
            <field name="name">define.action.form</field>
            <field name="model">define.action</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Plan action">
                    <group>
                        <group>
                            <field name="activity_type_id" required="1" options="{'no_create': True, 'no_open': True}"/>
                            <field name="type" stringe="Type" />
                            <field name="summary" placeholder="e.g. Discuss proposal"/>
                        </group>
                        <group>
                            <field name="date_deadline"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <field name="note" placeholder="Log a note..."/>
                    <footer>
                        <button name="action_copy_activity" string="Plan" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>



        <record id="action_plan_activity" model="ir.actions.act_window">
            <field name="name">plan.action</field>
            <field name="Type">ir.actions.act_window</field>
            <field name="res_model">define.action</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="test_p.view_plan_action_form"/>
            <field name="target">new</field>
        </record>

    <record model="ir.ui.view" id="view_create_lead_form0_inherit0">
            <field name="name">create.crm.lead.inherit0</field>
            <field name="model">create.crm.lead</field>
            <field name="inherit_id" ref="test_p.view_create_lead_form0"/>
            <field name="arch" type="xml">
                <sheet position="before">
                    <header>
                        <button name="%(test_p.action_plan_activity)d" string="Define next action" type="action" class="btn-primary"/>
                    </header>
                </sheet>
            </field>
    </record>


</odoo>
